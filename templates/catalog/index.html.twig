{% extends 'base.html.twig' %}

{% import 'macros/form_macros.html.twig' as form_macros %}

{% block title %}{{ 'catalog_management'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-sitemap"></i> {{ 'catalog_management'|trans }}</h1>
    <div>
        <a href="{{ path('catalog_tree') }}" class="btn btn-info me-2">
            <i class="fas fa-project-diagram"></i> {{ 'tree_view'|trans }}
        </a>
        <a href="{{ path('catalog_create') }}" class="btn btn-success-custom">
            <i class="fas fa-plus"></i> {{ 'create_catalog_item'|trans }}
        </a>
    </div>
</div>

<!-- Search and Navigation -->
<div class="row mb-4">
    <div class="col-md-8">
        <form method="GET" class="d-flex">
            <input type="text" name="search" class="form-control me-2" 
                   placeholder="{{ 'search_catalog_items'|trans }}" 
                   value="{{ search }}">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
            {% if search %}
                <a href="{{ path('catalog_index') }}" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-times"></i>
                </a>
            {% endif %}
        </form>
    </div>
    <div class="col-md-4">
        {% if currentParent %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('catalog_index') }}">{{ 'catalog'|trans }}</a>
                    </li>
                    {% for pathItem in currentParent.path %}
                        {% if not loop.last %}
                            <li class="breadcrumb-item">
                                <a href="{{ path('catalog_index', {'parent': pathItem.id}) }}">
                                    {{ pathItem.name }}
                                </a>
                            </li>
                        {% else %}
                            <li class="breadcrumb-item active">{{ pathItem.name }}</li>
                        {% endif %}
                    {% endfor %}
                </ol>
            </nav>
        {% endif %}
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>{{ 'total_items'|trans }}</h5>
                        <h3>{{ stats.total_items }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-list fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>{{ 'root_items_count'|trans }}</h5>
                        <h3>{{ stats.root_items }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tree fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>{{ 'leaf_items'|trans }}</h5>
                        <h3>{{ stats.leaf_items }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-leaf fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>{{ 'branch_items'|trans }}</h5>
                        <h3>{{ stats.branch_items }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-code-branch fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Catalog Items -->
{% if items|length > 0 %}
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="color: white;">{{ 'id'|trans }}</th>
                            <th style="color: white;">{{ 'name'|trans }}</th>
                            <th style="color: white;">{{ 'base_type'|trans }}</th>
                            <th style="color: white;">{{ 'layer'|trans }}</th>
                            <th style="color: white;">{{ 'level'|trans }}</th>
                            <th style="color: white;">{{ 'child_items'|trans }}</th>
                            <th style="color: white;">{{ 'created_at'|trans }}</th>
                            <th style="color: white;">{{ 'actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td><strong>{{ item.id }}</strong></td>
                                <td>
                                    {% set level = item.level %}
                                    {% if level > 0 %}
                                        <span class="text-muted">
                                            {% for i in 1..level %}â€”{% endfor %}
                                        </span>
                                    {% endif %}
                                    <a href="{{ path('catalog_show', {'id': item.id}) }}" class="text-decoration-none">
                                        {{ item.name }}
                                    </a>
                                    {% if item.hasChildren %}
                                        <span class="badge bg-secondary ms-2">
                                            {{ item.children|length }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.baseType %}
                                        <span class="badge bg-info">{{ item.baseType }}</span>
                                    {% else %}
                                        <span class="text-muted">{{ 'not_specified'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.layer %}
                                        <span class="badge bg-warning text-dark">{{ item.layer }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ level }}</span>
                                </td>
                                <td>
                                    {% if item.hasChildren %}
                                        <a href="{{ path('catalog_index', {'parent': item.id}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-folder-open"></i> {{ item.children|length }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">{{ 'no_children'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ item.createdAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    {{ form_macros.action_buttons('catalog_edit', 'catalog_show', 'catalog_delete', item.id, item.name) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% else %}
    {{ form_macros.empty_state('no_catalog_items_found', 'catalog_create', 'create_first_catalog_item') }}
{% endif %}

{% endblock %}
