{% extends 'base.html.twig' %}

{% block title %}{{ 'catalog_tree'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-project-diagram"></i> {{ 'catalog_tree'|trans }}</h1>
    <div>
        <a href="{{ path('catalog_index') }}" class="btn btn-secondary me-2">
            <i class="fas fa-list"></i> {{ 'list_view'|trans }}
        </a>
        <a href="{{ path('catalog_create') }}" class="btn btn-success-custom">
            <i class="fas fa-plus"></i> {{ 'create_catalog_item'|trans }}
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{ 'catalog_tree_structure'|trans }}</h5>
            </div>
            <div class="card-body">
                {% if tree|length > 0 %}
                    <div id="catalogTree">
                        {{ _self.render_tree_node(tree) }}
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-tree fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">{{ 'no_catalog_items_found'|trans }}</h5>
                        <p class="text-muted">{{ 'create_first_catalog_item_to_see_tree'|trans }}</p>
                        <a href="{{ path('catalog_create') }}" class="btn btn-success-custom">
                            <i class="fas fa-plus"></i> {{ 'create_first_catalog_item'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Tree Legend -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">{{ 'tree_legend'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <i class="fas fa-folder text-warning"></i> {{ 'branch_node'|trans }}
                </div>
                <div class="mb-2">
                    <i class="fas fa-file text-info"></i> {{ 'leaf_node'|trans }}
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary">0</span> {{ 'root_level'|trans }}
                </div>
                <div class="mb-2">
                    <span class="badge bg-secondary">1+</span> {{ 'child_levels'|trans }}
                </div>
            </div>
        </div>

        <!-- Tree Controls -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">{{ 'tree_controls'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary" id="expandAll">
                        <i class="fas fa-expand-arrows-alt"></i> {{ 'expand_all'|trans }}
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="collapseAll">
                        <i class="fas fa-compress-arrows-alt"></i> {{ 'collapse_all'|trans }}
                    </button>
                    <button type="button" class="btn btn-outline-info" id="toggleDetails">
                        <i class="fas fa-info-circle"></i> {{ 'toggle_details'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% macro render_tree_node(nodes) %}
    <ul class="tree-list">
        {% for node in nodes %}
            <li class="tree-item" data-id="{{ node.id }}" data-level="{{ node.level }}">
                <div class="tree-node d-flex align-items-center">
                    {% if node.hasChildren %}
                        <button class="btn btn-sm btn-link tree-toggle p-0 me-2" type="button">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                        <i class="fas fa-folder text-warning me-2"></i>
                    {% else %}
                        <span class="tree-spacer me-2" style="width: 24px;"></span>
                        <i class="fas fa-file text-info me-2"></i>
                    {% endif %}
                    
                    <div class="tree-content flex-grow-1">
                        <div class="d-flex align-items-center">
                            <a href="{{ path('catalog_show', {'id': node.id}) }}" class="text-decoration-none me-2">
                                <strong>{{ node.name }}</strong>
                            </a>
                            <span class="badge bg-primary me-2">{{ node.level }}</span>
                            {% if node.layer %}
                                <span class="badge bg-warning text-dark me-2">{{ node.layer }}</span>
                            {% endif %}
                            {% if node.hasChildren %}
                                <span class="badge bg-secondary">{{ node.children|length }}</span>
                            {% endif %}
                        </div>
                        
                        <div class="tree-details mt-1" style="display: none;">
                            <small class="text-muted">
                                {% if node.baseType %}
                                    <span class="me-2">{{ 'base_type'|trans }}: {{ node.baseType }}</span>
                                {% endif %}
                                {% if node.item %}
                                    <span class="me-2">{{ 'item_category'|trans }}: {{ node.item }}</span>
                                {% endif %}
                                {% if node.location %}
                                    <span class="me-2">{{ 'location'|trans }}: {{ node.location }}</span>
                                {% endif %}
                            </small>
                        </div>
                    </div>
                    
                    <div class="tree-actions">
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('catalog_show', {'id': node.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('catalog_edit', {'id': node.id}) }}" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('catalog_create', {'parent': node.id}) }}" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                {% if node.hasChildren %}
                    <div class="tree-children" style="display: none;">
                        {{ _self.render_tree_node(node.children) }}
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

<style>
.tree-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
}

.tree-item {
    margin: 0;
    padding: 0;
}

.tree-node {
    padding: 8px 12px;
    border-radius: 4px;
    margin-bottom: 2px;
    transition: background-color 0.2s;
}

.tree-node:hover {
    background-color: #f8f9fa;
}

.tree-children {
    margin-left: 30px;
    border-left: 2px solid #e9ecef;
    padding-left: 15px;
}

.tree-toggle {
    border: none !important;
    color: #6c757d;
    transition: transform 0.2s;
}

.tree-toggle.expanded {
    transform: rotate(90deg);
}

.tree-spacer {
    display: inline-block;
}

.tree-content {
    min-width: 0;
}

.tree-actions {
    opacity: 0;
    transition: opacity 0.2s;
}

.tree-node:hover .tree-actions {
    opacity: 1;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tree toggle functionality
    document.querySelectorAll('.tree-toggle').forEach(toggle => {
        toggle.addEventListener('click', function(e) {
            e.preventDefault();
            const treeItem = this.closest('.tree-item');
            const children = treeItem.querySelector('.tree-children');
            const icon = this.querySelector('i');
            
            if (children) {
                if (children.style.display === 'none') {
                    children.style.display = 'block';
                    icon.className = 'fas fa-chevron-down';
                    this.classList.add('expanded');
                } else {
                    children.style.display = 'none';
                    icon.className = 'fas fa-chevron-right';
                    this.classList.remove('expanded');
                }
            }
        });
    });

    // Expand all
    document.getElementById('expandAll').addEventListener('click', function() {
        document.querySelectorAll('.tree-children').forEach(children => {
            children.style.display = 'block';
        });
        document.querySelectorAll('.tree-toggle i').forEach(icon => {
            icon.className = 'fas fa-chevron-down';
        });
        document.querySelectorAll('.tree-toggle').forEach(toggle => {
            toggle.classList.add('expanded');
        });
    });

    // Collapse all
    document.getElementById('collapseAll').addEventListener('click', function() {
        document.querySelectorAll('.tree-children').forEach(children => {
            children.style.display = 'none';
        });
        document.querySelectorAll('.tree-toggle i').forEach(icon => {
            icon.className = 'fas fa-chevron-right';
        });
        document.querySelectorAll('.tree-toggle').forEach(toggle => {
            toggle.classList.remove('expanded');
        });
    });

    // Toggle details
    document.getElementById('toggleDetails').addEventListener('click', function() {
        const details = document.querySelectorAll('.tree-details');
        const isVisible = details[0] && details[0].style.display !== 'none';
        
        details.forEach(detail => {
            detail.style.display = isVisible ? 'none' : 'block';
        });
        
        const icon = this.querySelector('i');
        if (isVisible) {
            icon.className = 'fas fa-info-circle';
            this.innerHTML = '<i class="fas fa-info-circle"></i> {{ 'show_details'|trans }}';
        } else {
            icon.className = 'fas fa-eye-slash';
            this.innerHTML = '<i class="fas fa-eye-slash"></i> {{ 'hide_details'|trans }}';
        }
    });
});
</script>

{% endblock %}
