{% extends 'base.html.twig' %}

{% import 'macros/form_macros.html.twig' as form_macros %}

{% block title %}{{ catalogItem.name }} - {{ 'catalog'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-eye"></i> {{ 'view_catalog_item'|trans }}</h1>
    <div>
        <a href="{{ path('catalog_index') }}" class="btn btn-secondary me-2">
            <i class="fas fa-list"></i> {{ 'back_to_catalog'|trans }}
        </a>
        <a href="{{ path('catalog_edit', {'id': catalogItem.id}) }}" class="btn btn-primary me-2">
            <i class="fas fa-edit"></i> {{ 'edit'|trans }}
        </a>
        <a href="{{ path('catalog_create', {'parent': catalogItem.id}) }}" class="btn btn-success-custom">
            <i class="fas fa-plus"></i> {{ 'add_child_item'|trans }}
        </a>
    </div>
</div>

<!-- Breadcrumb -->
{% if path|length > 1 %}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('catalog_index') }}">{{ 'catalog'|trans }}</a>
        </li>
        {% for pathItem in path %}
            {% if not loop.last %}
                <li class="breadcrumb-item">
                    <a href="{{ path('catalog_show', {'id': pathItem.id}) }}">{{ pathItem.name }}</a>
                </li>
            {% else %}
                <li class="breadcrumb-item active">{{ pathItem.name }}</li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>
{% endif %}

<div class="row">
    <!-- Main Information -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">{{ 'catalog_item_information'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-info-circle"></i> {{ 'basic_information'|trans }}
                        </h6>
                        
                        <div class="mb-3">
                            <strong>{{ 'name'|trans }}:</strong><br>
                            <span class="fs-5">{{ catalogItem.name }}</span>
                        </div>

                        {% if catalogItem.parent %}
                        <div class="mb-3">
                            <strong>{{ 'parent_item'|trans }}:</strong><br>
                            <a href="{{ path('catalog_show', {'id': catalogItem.parent.id}) }}" class="text-decoration-none">
                                {{ catalogItem.parent.name }}
                            </a>
                        </div>
                        {% endif %}

                        <div class="mb-3">
                            <strong>{{ 'level'|trans }}:</strong><br>
                            <span class="badge bg-primary">{{ catalogItem.level }}</span>
                        </div>

                        {% if catalogItem.sortOrder %}
                        <div class="mb-3">
                            <strong>{{ 'sort_order'|trans }}:</strong><br>
                            {{ catalogItem.sortOrder }}
                        </div>
                        {% endif %}
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-success mb-3">
                            <i class="fas fa-table"></i> {{ 'catalog_structure'|trans }}
                        </h6>
                        
                        {% if catalogItem.baseType %}
                        <div class="mb-3">
                            <strong>{{ 'base_type'|trans }}:</strong><br>
                            <span class="badge bg-info">{{ catalogItem.baseType }}</span>
                        </div>
                        {% endif %}

                        {% if catalogItem.item %}
                        <div class="mb-3">
                            <strong>{{ 'item_category'|trans }}:</strong><br>
                            {{ catalogItem.item }}
                        </div>
                        {% endif %}

                        {% if catalogItem.location %}
                        <div class="mb-3">
                            <strong>{{ 'location'|trans }}:</strong><br>
                            {{ catalogItem.location }}
                        </div>
                        {% endif %}

                        {% if catalogItem.mainItem %}
                        <div class="mb-3">
                            <strong>{{ 'main_item'|trans }}:</strong><br>
                            {{ catalogItem.mainItem }}
                        </div>
                        {% endif %}

                        {% if catalogItem.itemName %}
                        <div class="mb-3">
                            <strong>{{ 'item_name'|trans }}:</strong><br>
                            {{ catalogItem.itemName }}
                        </div>
                        {% endif %}

                        {% if catalogItem.layer %}
                        <div class="mb-3">
                            <strong>{{ 'layer'|trans }}:</strong><br>
                            <span class="badge bg-warning text-dark">{{ catalogItem.layer }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Additional Information -->
                {% if catalogItem.synonym or catalogItem.constructionDetails %}
                <hr>
                <h6 class="text-info mb-3">
                    <i class="fas fa-plus-circle"></i> {{ 'additional_information'|trans }}
                </h6>
                
                <div class="row">
                    {% if catalogItem.synonym %}
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>{{ 'synonym'|trans }}:</strong><br>
                            <div class="border p-2 bg-light rounded">
                                {{ catalogItem.synonym|nl2br }}
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    {% if catalogItem.constructionDetails %}
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>{{ 'construction_details'|trans }}:</strong><br>
                            {{ catalogItem.constructionDetails }}
                        </div>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                <!-- Seasonal Information -->
                {% set hasSeasons = catalogItem.season1 or catalogItem.season2 or catalogItem.season3 or catalogItem.season4 or catalogItem.season5 or catalogItem.season6 or catalogItem.season7 or catalogItem.season8 %}
                {% if hasSeasons %}
                <hr>
                <h6 class="text-warning mb-3">
                    <i class="fas fa-calendar-alt"></i> {{ 'seasons'|trans }}
                </h6>
                
                <div class="row">
                    {% for i in 1..8 %}
                        {% if attribute(catalogItem, 'season' ~ i) %}
                            <div class="col-md-3 mb-2">
                                <span class="badge bg-warning text-dark">
                                    {{ ('season_' ~ i)|trans }}
                                </span>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">{{ 'actions'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('catalog_edit', {'id': catalogItem.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> {{ 'edit_catalog_item'|trans }}
                    </a>
                    <a href="{{ path('catalog_create', {'parent': catalogItem.id}) }}" class="btn btn-success-custom">
                        <i class="fas fa-plus"></i> {{ 'add_child_item'|trans }}
                    </a>
                    <form method="post" action="{{ path('catalog_delete', {'id': catalogItem.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ catalogItem.id) }}">
                        <button type="button" class="btn btn-danger w-100" 
                                data-delete-confirm 
                                data-delete-item="{{ catalogItem.name }}">
                            <i class="fas fa-trash"></i> {{ 'delete_catalog_item'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Metadata -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">{{ 'metadata'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>{{ 'id'|trans }}:</strong> {{ catalogItem.id }}
                </div>
                <div class="mb-2">
                    <strong>{{ 'created_at'|trans }}:</strong><br>
                    {{ catalogItem.createdAt|date('Y-m-d H:i:s') }}
                </div>
                {% if catalogItem.updatedAt %}
                <div class="mb-2">
                    <strong>{{ 'updated_at'|trans }}:</strong><br>
                    {{ catalogItem.updatedAt|date('Y-m-d H:i:s') }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Children Items -->
{% if children|length > 0 %}
<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">{{ 'child_items'|trans }} ({{ children|length }})</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="color: white;">{{ 'name'|trans }}</th>
                        <th style="color: white;">{{ 'base_type'|trans }}</th>
                        <th style="color: white;">{{ 'layer'|trans }}</th>
                        <th style="color: white;">{{ 'children_count'|trans }}</th>
                        <th style="color: white;">{{ 'actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for child in children %}
                        <tr>
                            <td>
                                <a href="{{ path('catalog_show', {'id': child.id}) }}" class="text-decoration-none">
                                    {{ child.name }}
                                </a>
                            </td>
                            <td>
                                {% if child.baseType %}
                                    <span class="badge bg-info">{{ child.baseType }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if child.layer %}
                                    <span class="badge bg-warning text-dark">{{ child.layer }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if child.hasChildren %}
                                    <span class="badge bg-secondary">{{ child.children|length }}</span>
                                {% else %}
                                    <span class="text-muted">0</span>
                                {% endif %}
                            </td>
                            <td>
                                {{ form_macros.action_buttons('catalog_edit', 'catalog_show', 'catalog_delete', child.id, child.name) }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}
