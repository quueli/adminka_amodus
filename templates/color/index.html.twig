{% extends 'base.html.twig' %}

{% block title %}{{ 'colors'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-palette"></i> {{ 'colors_management'|trans }}</h1>
    <a href="{{ path('color_create') }}" class="btn btn-success-custom">
        <i class="fas fa-plus"></i> {{ 'create_new_color'|trans }}
    </a>
</div>

{% if records|length > 0 %}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">{{ 'all_colors'|trans }} ({{ records|length }} {{ 'total_records'|trans }})</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>{{ 'id'|trans }}</th>
                            <th>{{ 'color'|trans }}</th>
                            <th>{{ 'hex_color_number'|trans }}</th>
                            <th>{{ 'saturation'|trans }}</th>
                            <th>{{ 'palette'|trans }}</th>
                            <th>{{ 'created_at'|trans }}</th>
                            <th>{{ 'actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                        <tr>
                            <td><strong>{{ record.id }}</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="color-preview me-2" style="background-color: {{ record.hexColorNumber }}; width: 30px; height: 30px; border-radius: 4px; border: 1px solid #ddd;"></div>
                                    {{ record.color|default('-') }}
                                </div>
                            </td>
                            <td>
                                <code class="bg-light px-2 py-1 rounded">{{ record.hexColorNumber|default('-') }}</code>
                            </td>
                            <td>{{ record.saturation|default('-') }}</td>
                            <td>{{ record.palette|default('-') }}</td>
                            <td>{{ record.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('color_view', {'id': record.id}) }}" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i> {{ 'view'|trans }}
                                    </a>
                                    <a href="{{ path('color_edit', {'id': record.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> {{ 'edit'|trans }}
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete({{ record.id }}, '{{ record.color|default('color') }}')">
                                        <i class="fas fa-trash"></i> {{ 'delete'|trans }}
                                    </button>
                                </div>
                                
                                <form id="delete-form-{{ record.id }}" action="{{ path('color_delete', {'id': record.id}) }}" method="post" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ record.id) }}">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        {{ 'no_colors_found'|trans }}. 
        <a href="{{ path('color_create') }}" class="alert-link">{{ 'create_first_color'|trans }}</a>
    </div>
{% endif %}

<script>
function confirmDelete(id, colorName) {
    if (confirm('{{ 'are_you_sure_delete_color'|trans }}')) {
        document.getElementById('delete-form-' + id).submit();
    }
}
</script>
{% endblock %}
