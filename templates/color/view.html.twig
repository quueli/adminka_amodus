{% extends 'base.html.twig' %}

{% import 'macros/form_macros.html.twig' as form_macros %}

{% block title %}{{ 'view_color'|trans }} #{{ record.id }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-eye"></i> {{ 'view_color'|trans }} #{{ record.id }}</h1>
            <div>
                <a href="{{ path('color_edit', {'id': record.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> {{ 'edit'|trans }}
                </a>
                <a href="{{ path('color_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> {{ 'back_to_colors'|trans }}
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{ 'color_information'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <strong>{{ 'color'|trans }}:</strong>
                                <div class="mt-1">{{ record.color|default('-') }}</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>{{ 'hex_color_number'|trans }}:</strong>
                                <div class="mt-1">
                                    <code class="bg-light px-2 py-1 rounded">{{ record.hexColorNumber|default('-') }}</code>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>{{ 'saturation'|trans }}:</strong>
                                <div class="mt-1">{{ record.saturation|default('-') }}</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>{{ 'palette'|trans }}:</strong>
                                <div class="mt-1">{{ record.palette|default('-') }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <strong>{{ 'color_preview'|trans }}:</strong>
                        <div class="color-preview mt-2 mx-auto" style="background-color: {{ record.hexColorNumber }}; width: 120px; height: 120px; border-radius: 8px; border: 2px solid #ddd; box-shadow: 0 4px 8px rgba(0,0,0,0.1);"></div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_macros.metadata_card('color_metadata', {
            'id': record.id,
            'created_at': record.createdAt|date('Y-m-d H:i:s'),
            'last_updated': record.updatedAt|date('Y-m-d H:i:s')
        }) }}

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">{{ 'actions'|trans }}</h6>
            </div>
            <div class="card-body">
                {{ form_macros.action_buttons('color_edit', null, 'color_delete', record.id, record.color) }}
            </div>
        </div>
    </div>
</div>

{% block javascript %}{% endblock %}
{% endblock %}
