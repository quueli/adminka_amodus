{% extends 'base.html.twig' %}

{% block title %}{{ 'create_nomenclature'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-plus"></i> {{ 'create_nomenclature'|trans }}</h1>
    <a href="{{ path('nomenclature_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> {{ 'back_to_nomenclature'|trans }}
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{ 'nomenclature_information'|trans }}</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.nomenclatureName) }}
                    {{ form_widget(form.nomenclatureName) }}
                    {{ form_errors(form.nomenclatureName) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.characteristicAvailableValues) }}
                    {{ form_widget(form.characteristicAvailableValues) }}
                    {{ form_errors(form.characteristicAvailableValues) }}
                    <div class="form-text">{{ 'select_multiple_values_help'|trans }}</div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('nomenclature_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times"></i> {{ 'cancel'|trans }}
                    </a>
                    {{ form_widget(form.save) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


{% endblock %}
