{% extends 'base.html.twig' %}

{% block title %}{{ 'view_record'|trans }} #{{ record.id }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-eye"></i> {{ 'view_record'|trans }} #{{ record.id }}</h1>
            <div>
                <a href="{{ path('admin_edit', {'id': record.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> {{ 'edit'|trans }}
                </a>
                <a href="{{ path('admin_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> {{ 'back_to_list'|trans }}
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{ 'record_details'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label"><strong>{{ 'color'|trans }}:</strong></label>
                        <div class="form-control-plaintext">{{ record.color|default('-') }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label"><strong>{{ 'hex_color_number'|trans }}:</strong></label>
                        <div class="form-control-plaintext">{{ record.hexColorNumber|default('-') }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label"><strong>{{ 'saturation'|trans }}:</strong></label>
                        <div class="form-control-plaintext">{{ record.saturation|default('-') }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label"><strong>{{ 'palette'|trans }}:</strong></label>
                        <div class="form-control-plaintext">{{ record.palette|default('-') }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">{{ 'record_metadata'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>{{ 'id'|trans }}:</strong> {{ record.id }}
                    </div>
                    <div class="col-md-4">
                        <strong>{{ 'created_at'|trans }}:</strong> {{ record.createdAt|date('Y-m-d H:i:s') }}
                    </div>
                    <div class="col-md-4">
                        <strong>{{ 'last_updated'|trans }}:</strong> {{ record.updatedAt|date('Y-m-d H:i:s') }}
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <div class="btn-group" role="group">
                <a href="{{ path('admin_edit', {'id': record.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> {{ 'edit_record'|trans }}
                </a>
                <button type="button" class="btn btn-danger" onclick="confirmDelete({{ record.id }})">
                    <i class="fas fa-trash"></i> {{ 'delete_record'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete record #{{ record.id }}? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(recordId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const form = document.getElementById('deleteForm');
    
    form.action = '{{ path('admin_delete', {'id': record.id}) }}';
    modal.show();
}
</script>
{% endblock %}
