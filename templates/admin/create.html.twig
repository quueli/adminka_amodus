{% extends 'base.html.twig' %}

{% block title %}Create New Record - Admin Panel{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-plus"></i> Create New Record</h1>
            <a href="{{ path('admin_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Record Information</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.field1) }}
                        {{ form_widget(form.field1) }}
                        {{ form_errors(form.field1) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.field2) }}
                        {{ form_widget(form.field2) }}
                        {{ form_errors(form.field2) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.field3) }}
                        {{ form_widget(form.field3) }}
                        {{ form_errors(form.field3) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.field4) }}
                        {{ form_widget(form.field4) }}
                        {{ form_errors(form.field4) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.field5) }}
                        {{ form_widget(form.field5) }}
                        {{ form_errors(form.field5) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    {{ form_widget(form.save) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
