{% extends 'base.html.twig' %}

{% block title %}{{ 'records'|trans }} - {{ 'admin_panel'|trans }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-list"></i> {{ 'records_management'|trans }}</h1>
    <a href="{{ path('admin_create') }}" class="btn btn-success-custom">
        <i class="fas fa-plus"></i> {{ 'create_new_record'|trans }}
    </a>
</div>

{% if records|length > 0 %}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">{{ 'all_records'|trans }} ({{ records|length }} {{ 'total_records'|trans }})</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>{{ 'id'|trans }}</th>
                            <th>{{ 'color'|trans }}</th>
                            <th>{{ 'hex_color_number'|trans }}</th>
                            <th>{{ 'saturation'|trans }}</th>
                            <th>{{ 'palette'|trans }}</th>
                            <th>{{ 'created_at'|trans }}</th>
                            <th>{{ 'actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                        <tr>
                            <td><strong>{{ record.id }}</strong></td>
                            <td>{{ record.color|default('-') }}</td>
                            <td>{{ record.hexColorNumber|default('-') }}</td>
                            <td>{{ record.saturation|default('-') }}</td>
                            <td>{{ record.palette|default('-') }}</td>
                            <td>{{ record.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_view', {'id': record.id}) }}"
                                       class="btn btn-sm btn-info" title="{{ 'view'|trans }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_edit', {'id': record.id}) }}"
                                       class="btn btn-sm btn-warning" title="{{ 'edit'|trans }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            onclick="confirmDelete({{ record.id }})" title="{{ 'delete'|trans }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-2x mb-3"></i>
        <h4>{{ 'no_records_found'|trans }}</h4>
        <p>{{ 'no_records_message'|trans }}</p>
        <a href="{{ path('admin_create') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> {{ 'create_first_record'|trans }}
        </a>
    </div>
{% endif %}

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'confirm_delete'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                {{ 'confirm_delete_message'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'cancel'|trans }}</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">{{ 'delete'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(recordId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const form = document.getElementById('deleteForm');

    form.action = '/admin/delete/' + recordId;

    modal.show();
}
</script>
{% endblock %}
