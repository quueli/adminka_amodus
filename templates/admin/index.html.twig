{% extends 'base.html.twig' %}

{% block title %}Records List - Admin Panel{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-list"></i> Records Management</h1>
    <a href="{{ path('admin_create') }}" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Record
    </a>
</div>

{% if records|length > 0 %}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Records ({{ records|length }} total)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Field 1</th>
                            <th>Field 2</th>
                            <th>Field 3</th>
                            <th>Field 4</th>
                            <th>Field 5</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                        <tr>
                            <td><strong>{{ record.id }}</strong></td>
                            <td>{{ record.field1|default('-') }}</td>
                            <td>{{ record.field2|default('-') }}</td>
                            <td>{{ record.field3|default('-') }}</td>
                            <td>{{ record.field4|default('-') }}</td>
                            <td>{{ record.field5|default('-') }}</td>
                            <td>{{ record.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_view', {'id': record.id}) }}" 
                                       class="btn btn-sm btn-info" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_edit', {'id': record.id}) }}" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" 
                                            onclick="confirmDelete({{ record.id }})" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-2x mb-3"></i>
        <h4>No records found</h4>
        <p>There are no records in the database yet.</p>
        <a href="{{ path('admin_create') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create First Record
        </a>
    </div>
{% endif %}

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(recordId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const form = document.getElementById('deleteForm');
    const token = document.getElementById('deleteToken');
    
    form.action = '{{ path('admin_delete', {'id': '__ID__'}) }}'.replace('__ID__', recordId);
    token.value = '{{ csrf_token('delete' ~ '__ID__') }}'.replace('__ID__', recordId);
    
    modal.show();
}
</script>
{% endblock %}
